<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái nhấn (pressed) -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="#E91E63" /> <!-- Màu viền khi nhấn -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Trạng thái di chuột vào (hover - state_focused) -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="#03A9F4" /> <!-- Màu viền khi hover -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/black" /> <!-- Màu viền mặc định -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
