<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn vào -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Màu nền khi nhấn (xám nhạt) -->
            <corners android:radius="30dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FDD3E1" />
            <corners android:radius="60dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>
</selector>
